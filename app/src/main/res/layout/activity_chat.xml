<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_background"
    tools:context=".activities.ChatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_chat_box_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/elevationSmall">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_back_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_white_back_icon_24"
                android:background="@color/colorPrimary"
                android:contentDescription="@string/image_contentDescription"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:id="@+id/iv_doctor_image"
                app:civ_border_color="@color/primary_text_color"
                android:contentDescription="@string/image_contentDescription"
                android:src="@drawable/ic_user_place_holder"
                app:civ_border_width="@dimen/item_doctor_margin_circular_border_width"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/marginLarge"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/name_of_doctor"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/tv_designation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/name_of_doctor"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="@dimen/paddingSmall"
        app:layout_constraintTop_toBottomOf="@id/toolbar_chat_box_activity"
        app:layout_constraintBottom_toTopOf="@+id/ll_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintRight_toRightOf="parent"/>


    <LinearLayout
        android:id="@+id/ll_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">

        <EditText
            android:id="@+id/et_enter_message"
            android:layout_width="0dp"
            android:layout_height="@dimen/touchAreaSmall"
            android:layout_weight="1"
            android:layout_margin="@dimen/marginLarge"
            android:hint="Type message"
            android:textSize="@dimen/textMedium"
            android:fontFamily="@font/raleway_medium"
            android:inputType="text"
            android:background="@drawable/edit_primary"
            android:autofillHints="Enter message"
            android:padding="@dimen/paddingLarge"/>

        <!--button for searchng the data-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/iv_send"
            android:layout_width="@dimen/touchAreaSmall"
            android:layout_height="@dimen/touchAreaSmall"
            app:srcCompat="@drawable/ic_icon_send_24"
            android:contentDescription="@string/image_contentDescription"
            android:textAllCaps="false"
            android:backgroundTint="?attr/colorPrimary"
            app:tint="@color/white"
            app:maxImageSize="24dp"
            app:borderWidth="0dp"
            app:fabCustomSize="@dimen/touchAreaSmall"
            android:layout_margin="@dimen/marginSmall"
            app:pressedTranslationZ="1dp"
            android:enabled="false"
            android:alpha="0.25"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>